function efed_shop_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL) {
	switch($node->type){
		case 'efed_product':
			$p = efed_shop_load_by_nid($node->nid);	
			
			switch ($op) {
				case 'load':
							
					$node->product_id = $p->product_id;					
					$node->price = $p->price;					
					$node->shop_id = $p->shop_id;	
					
				break;
				
				case 'insert':
				
					efed_shop_store($node);
				
				break;
				
				case 'update':
				
					efed_shop_store($node);
				
				break;
				
				case 'delete':					
				
					efed_shop_delete($node->shop_id);
				
				break;
			}
		break;
	}
	
}

