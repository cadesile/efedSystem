function efed_shop_block($op = 'list', $delta = 0, $edit = array()) {
  if ($op == 'list') {
    $blocks[0] = array(
		'info' => t('Shopping Cart')
	);
    return $blocks;
  }
  else if ($op == 'view') {
    switch($delta) {
      case 0:
        $block = array('subject' => t('Shopping Cart'),
			'content' => efed_shop_block_0()
		);
		
        break;
    }
    return $block;
  }
}

